<div class='logo pull-left' onclick="window.location='/'"></div>

<ul class="nav pull-right">
<% 

items = []

items << ["Review", { :controller=>'review', :action=>'index' }]

items << ["Submit Photo", { :controller=>'dummy', :action=>'submit' }]

bookmarklet_code = "window.location='#{url_for(:only_path=>false, :controller=>'dummy', :action=>'submit', :submit=>'submit')}&url='+encodeURIComponent(document.location)"

items << ["Bookmarklet", "javascript:#{bookmarklet_code}"]

if @current_worker # and @current_worker.clearance > 50 
  items << ["Logout #{@current_worker.description}", { :controller=>'admin', :action=>'logout' }]
end

# items << "Funds: $#{Peanut::Redis::Cache.capture(:duration=>300) { Turkey.adapter.availableFunds }}"

items.each do |item|
  element, target = item
  if target.is_a?(Hash)
    unless target[:controller] == params[:controller] and target[:action] == params[:action]
      %><li><%= link_to(element, target) %></li><% 
    else
      %><li class="active"><%= link_to(element, '#') %></li><%       
    end
  else
    %><li><%= link_to(element, target) %></li><% 
  end
end %>
</ul>
