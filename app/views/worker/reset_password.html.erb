<div id="reset_password" class="form">
  <%= form_tag(action: 'reset_password') %>
    <div>New password: <%= password_field_tag('password', '') %></div>
    <div>Confirm new password: <%= password_field_tag('confirm_password', '') %></div>
    <div><%= submit_tag('Update') %></div>
  </form>
</div>
